<layout version="0.1.0">
    <default>

        <reference name="head">
            <action method="addJs"><script>locator/locator.js</script></action>
            <action method="addJs"><script>locator/plugins.js</script></action>
            <action method="addCss"><script>locator/css/locator.css</script></action>
        </reference>

        <reference name="left">
            <block type="digibrews_locator/search_quicksearch" name="search_quicksearch" as="search_quicksearch" />
        </reference>

    </default>

    <locator_search_index>

        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>

        <reference name="content">
            <block type="digibrews_locator/search" name="search" as="search">
                <block type="digibrews_locator/search_noresults" name="empty" as="empty" />
            </block>
        </reference>

    </locator_search_index>

    <locator_location_index>

        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>

        <reference name="content">
            <block type="digibrews_locator/location_view" name="view" as="view"></block>
        </reference>

    </locator_location_index>

</layout>
